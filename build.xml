<?xml version="1.0" encoding="UTF-8"?>
<project name="BukkitEventsLib" default="default" basedir=".">
	<description>Builds, tests, and runs the project BukkitEventsLib.</description>
	<import file="nbproject/build-impl.xml"/>

	<property name="bon.path" value="D:\MCP\deobf_decomp\BON2.jar" />
	<property name="mcp.folder" value="D:\MCP\1.4.7" />
	<property name="release.folder" value="../release/mods/1.4.7" />
	<property name="release.file.dev" value="BukkitEventsLib-1.4.7-dev.jar" />
	<property name="release.file.source" value="BukkitEventsLib-1.4.7-src.zip" />
	<property name="release.file.normal" value="BukkitEventsLib-1.4.7-server.jar" />

	<target name="-post-jar">
		<antcall target="dev-build" />
		<antcall target="obfuscate" />
		<antcall target="release" />
	</target>

	<target name="obfuscate">
		<java jar="${bon.path}" failonerror="true">
			<arg value="-mcp" />
			<arg value="${mcp.folder}" />
			<arg value="-from" />
			<arg value="MCP" />
			<arg value="-to" />
			<arg value="OBF" />
			<arg value="-side" />
			<arg value="UNIVERSAL" />
			<arg value="-ref" />
			<arg value="${file.reference.1.4.7.jar}" />
			<arg value="-in" />
			<arg file="${dist.jar}" />
			<arg value="-out" />
			<arg file="${dist.dir}/${release.file.normal}" />
		</java>
		<delete file="${dist.jar}" failonerror="true" />
	</target>

	<target name="dev-build">
		<copy file="${dist.jar}" tofile="${dist.dir}/${release.file.dev}" overwrite="true" failonerror="true" />
		<zip destfile="${dist.dir}/${release.file.source}" basedir="src" update="false" encoding="UTF-8" />
	</target>

	<target name="release">
		<copy file="${dist.dir}/${release.file.dev}" tofile="${release.folder}/${release.file.dev}" overwrite="true" failonerror="true" />
		<copy file="${dist.dir}/${release.file.source}" tofile="${release.folder}/${release.file.source}" overwrite="true" failonerror="true" />
		<copy file="${dist.dir}/${release.file.normal}" tofile="${release.folder}/${release.file.normal}" overwrite="true" failonerror="true" />
	</target>

</project>
